<style>
    footer{
       display: none;
    }
</style>

<div class="row">
    {{#each notes}}
    <div class="col-md-4 mb-4 my-100">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title d-flex justify-content-between align-items-center">
                    {{title}} <a href="/notes/edit/{{_id}}"><i class=" fas fa-edit"></i></a>
                </h4>
                <p>
                    {{description}}
                </p>
                    <form action="/notes/delete-note/{{_id}}?_method=DELETE" method="POST">
                    <input type="hidden" name="_method" value="DELETE">
                    <button class="btn btn-danger btn-block btn-sm " type="submit">
                        Borrar
                    </button>
                    </form>
            </div>
        </div>
    </div>
   
    {{else}}
        <div class="card mx-auto">
            <div class="card-body">
            <h1>Hola {{name}}</h1>
                <p class="lead">Aun no hay notas</p>
                <a href="/notes/add" class="btn btn-success btn-block "> Cree una</a>
            </div>
        </div>
    {{/each}}
</div>

{{#if notes}}
<div class="row justify-content-center ">
    <h4 class="card-title">
        <a href="/notes/add" class="text-primary"><i class="fas fa-plus"></i></a> 
    </h4>
</div>
{{/if}}